{
  "name": "assetforce-console",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/feature/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "dotenvx run -f .env.local -f .env -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "codegen": "turbo codegen",
    "e2e": "bash scripts/test/e2e.sh",
    "e2e:ui": "bash scripts/test/e2e.sh all --ui"
  },
  "devDependencies": {
    "@assetforce/playwright-config": "^0.2.0",
    "@dotenvx/dotenvx": "~1.51.1",
    "prettier": "~3.7.4",
    "sass": "^1.97.0",
    "turbo": "^2.6.3",
    "typescript": "~5.9.3"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@assetforce/eslint-config": "*",
    "@assetforce/jest-config": "0.2.0"
  }
}
