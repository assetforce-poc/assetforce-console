{
  "name": "assetforce-console",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/feature/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "dotenvx run -f .env.local -f .env -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "e2e": "playwright test --config=e2e/playwright.config.cjs",
    "e2e:ui": "playwright test --config=e2e/playwright.config.cjs --ui",
    "e2e:auth": "playwright test --config=e2e/playwright.config.cjs auth/"
  },
  "devDependencies": {
    "@assetforce/playwright-config": "^0.2.0",
    "@dotenvx/dotenvx": "~1.51.1",
    "prettier": "~3.7.4",
    "turbo": "^2.6.3",
    "typescript": "~5.9.3"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@assetforce/eslint-config": "*",
    "@assetforce/jest-config": "0.2.0"
  }
}
