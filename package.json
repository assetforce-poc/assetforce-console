{
  "name": "assetforce-console",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/feature/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "dotenvx run -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "~1.51.1",
    "prettier": "~3.3.3",
    "turbo": "~2.6.1",
    "typescript": "~5.7.2"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  }
}
